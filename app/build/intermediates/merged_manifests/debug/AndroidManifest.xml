<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.workspace_android_application"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="28"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/application_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.Workspace_Android_application" >
        <activity
            android:name="com.example.registration.Register_Account_Activity"
            android:label="@string/app_fullname" />
        <activity
            android:name="com.example.registration.Assignment_Edit_Text"
            android:label="@string/assignments_edit_text"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.example.registration.Assignments_Activity"
            android:label="@string/assignments_activity" />
        <activity
            android:name="com.example.registration.Project_Directories"
            android:label="@string/project_directory_activity" />
        <activity
            android:name="com.example.registration.Goals_Days_Edit"
            android:label="@string/goals_day_activity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.example.registration.Goals_Activity"
            android:label="@string/goals_activity"
            android:launchMode="singleTask" />
        <activity
            android:name="com.example.registration.TaskName_Activity"
            android:label="@string/task_activity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.example.registration.AllTasksActivity"
            android:label="@string/all_tasks_activity" />
        <activity
            android:name="com.example.registration.Projects_Activity"
            android:label="@string/all_projects_activity" />
        <activity android:name="com.example.registration.Tasks_Activity" />
        <activity
            android:name="com.example.registration.MainActivity"
            android:label="@string/app_fullname" />
        <activity
            android:name="com.example.registration.AppLoginEntrance"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>