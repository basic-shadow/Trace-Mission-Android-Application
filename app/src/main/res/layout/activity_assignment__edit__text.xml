<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskName_Activity"
    android:background="@drawable/background_gradient">

    <EditText
        android:id="@+id/assignment_edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="96dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        android:hint="Enter Text"
        android:textSize="14sp"
        android:gravity="top"
        android:imeOptions="actionDone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/project_name_inFile"
        android:layout_marginTop="32dp"
        android:layout_marginStart="12dp"
        android:background="@color/black"
        android:alpha="0.4"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/directory_name_inFile"
        android:layout_marginTop="62dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/black"
        android:layout_marginStart="31dp"
        android:alpha="0.5"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginStart="53dp"
        android:layout_height="1dp"
        android:layout_below="@+id/file_name_inFile"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/black"
        android:alpha="0.6"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="-32dp"
        android:layout_alignParentTop="true"
        android:id="@+id/project_name_inFile"
        android:text="Project"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="14dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="-62dp"
        android:id="@+id/directory_name_inFile"
        android:text="Directory"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="32dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp"
        android:layout_marginBottom="-99dp"
        android:id="@+id/file_name_inFile"
        android:text="File"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="57dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/assignment_text_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        android:src="@android:drawable/ic_input_add"
        android:elevation="30dp"
        android:backgroundTint="#0B85E3"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="15dp"
        android:background="#00FFFFFF"
        android:contextClickable="false"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="46dp"
        android:background="#00FFFFFF"
        app:srcCompat="@android:drawable/arrow_down_float" />

</RelativeLayout>