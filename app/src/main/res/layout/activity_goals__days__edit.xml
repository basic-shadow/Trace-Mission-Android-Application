<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Goals_Days_Edit"
    android:background="@drawable/background_gradient">

    <EditText
        android:id="@+id/Goals_editable_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="8dp"
        android:hint="Enter Text"
        android:textSize="14sp"
        android:gravity="top"
        android:imeOptions="actionDone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/Goals_days_name"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="48dp"
        android:background="@color/black"
        android:alpha="0.4"/>

    <TextView
        android:id="@+id/Goals_days_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Goals_editable_text"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-46dp"
        android:text="Text Name"
        android:textSize="29sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/Goals_add_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        android:src="@android:drawable/ic_input_add"
        android:elevation="30dp"
        android:backgroundTint="#0B85E3"/>

</RelativeLayout>